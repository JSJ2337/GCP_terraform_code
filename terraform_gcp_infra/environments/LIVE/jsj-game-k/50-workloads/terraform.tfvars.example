# Region/Project overrides (필요 시 루트 root.hcl과 동일하게 유지)
project_id     = "jsj-game-k"
project_name   = "game-k"
environment    = "prod"
organization   = "jsj-dev"
region_primary = "asia-northeast3"
region_backup  = "asia-northeast1"

# 기본 VM 설정 (instances에서 override 가능)
instance_count     = 0
machine_type       = "e2-micro"
image_family       = "rocky-linux-9"
image_project      = "rocky-linux-cloud"
boot_disk_size_gb  = 30
boot_disk_type     = "pd-balanced"
enable_public_ip   = false
enable_os_login    = true
preemptible        = false
startup_script     = ""
tags               = ["prod", "ssh-allowed"]
labels = {
  environment = "prod"
}

# 역할별 인스턴스 정의 예시
instances = {
  "jsj-lobby-01" = {
    hostname = "jsj-lobby-01"
    zone     = "asia-northeast3-a"
    tags     = ["lobby", "ssh-allowed"]
    image_family  = "rocky-linux-9"
    image_project = "rocky-linux-cloud"
    startup_script_file = "scripts/lobby.sh"
    subnetwork_self_link = "projects/jsj-game-k/regions/asia-northeast3/subnetworks/game-k-subnet-dmz"
  }
  "jsj-lobby-02" = {
    hostname = "jsj-lobby-02"
    zone     = "asia-northeast3-b"
    tags     = ["lobby", "ssh-allowed"]
    image_family  = "rocky-linux-9"
    image_project = "rocky-linux-cloud"
    startup_script_file = "scripts/lobby.sh"
    subnetwork_self_link = "projects/jsj-game-k/regions/asia-northeast3/subnetworks/game-k-subnet-dmz"
  }
  "jsj-web-01" = {
    hostname     = "jsj-web-01"
    zone         = "asia-northeast3-a"
    machine_type = "e2-small"
    tags         = ["web", "ssh-allowed"]
    image_family  = "rocky-linux-9"
    image_project = "rocky-linux-cloud"
    startup_script_file = "scripts/lobby.sh"
    subnetwork_self_link = "projects/jsj-game-k/regions/asia-northeast3/subnetworks/game-k-subnet-dmz"
  }
  "jsj-web-02" = {
    hostname = "jsj-web-02"
    zone     = "asia-northeast3-b"
    tags     = ["web", "ssh-allowed"]
    image_family  = "rocky-linux-9"
    image_project = "rocky-linux-cloud"
    startup_script_file = "scripts/lobby.sh"
    subnetwork_self_link = "projects/jsj-game-k/regions/asia-northeast3/subnetworks/game-k-subnet-dmz"
  }
  "jsj-was-01" = {
    hostname     = "jsj-was-01"
    zone         = "asia-northeast3-c"
    machine_type = "e2-standard-4"
    tags         = ["was", "ssh-allowed"]
    image_family  = "rocky-linux-9"
    image_project = "rocky-linux-cloud"
    startup_script_file = "scripts/was.sh"
    subnetwork_self_link = "projects/jsj-game-k/regions/asia-northeast3/subnetworks/game-k-subnet-private"
  }
  "jsj-was-02" = {
    hostname             = "jsj-was-02"
    zone                 = "asia-northeast3-b"
    machine_type         = "e2-standard-4"
    tags                 = ["was", "ssh-allowed"]
    labels = {
      role = "was"
      tier = "backend"
    }
    image_family         = "rocky-linux-9"
    image_project        = "rocky-linux-cloud"
    startup_script_file  = "scripts/was.sh"
    subnetwork_self_link = "projects/jsj-game-k/regions/asia-northeast3/subnetworks/game-k-subnet-private"
  }
}

# Managed Instance Groups (LB/Autoscaling용)
instance_groups = {
  "jsj-web-ig" = {
    instances = ["jsj-web-01", "jsj-web-02", "jsj-web-03"]
    named_ports = [
      { name = "http", port = 80 }
    ]
  }
  "jsj-lobby-ig" = {
    instances = ["jsj-lobby-01", "jsj-lobby-02", "jsj-lobby-03"]
  }
  "jsj-was-ig" = {
    instances = ["jsj-was-01", "jsj-was-02"]
    named_ports = [
      { name = "http", port = 8080 }
    ]
  }
}
