# Terragrunt entrypoint: environments/LIVE/proj-default-templet/50-workloads/terragrunt.hcl
# 워크로드(GCE VM 세트) 설정 예시

# 공통 입력 (루트 root.hcl의 inputs로 대체 가능)
project_id     = "jsj-game-l"
project_name   = "game-l"
environment    = "prod"
organization   = "jsj-dev"
region_primary = "asia-northeast3"
region_backup  = "asia-northeast1"

# 기본값 (roles/instances에서 override 가능)
instance_count     = 0
machine_type       = "e2-micro"
image_family       = "debian-12"
image_project      = "debian-cloud"
boot_disk_size_gb  = 20
boot_disk_type     = "pd-balanced"
enable_public_ip   = false
enable_os_login    = true
preemptible        = false
startup_script     = ""
service_account_scopes = ["https://www.googleapis.com/auth/cloud-platform"]
tags = ["game", "ssh-allowed"]
labels = {
  environment = "prod"
}

# 역할별 인스턴스 정의 (예: lobby 2대, web 2대, was 1대)
instances = {
  "jsj-lobby-01" = {
    hostname             = "jsj-lobby-01"
    zone                 = "asia-northeast3-a"
    machine_type         = "e2-small"
    subnetwork_self_link = "projects/jsj-game-l/regions/asia-northeast3/subnetworks/game-l-subnet-dmz"
    tags                 = ["lobby", "ssh-allowed"]
    labels = {
      role = "lobby"
      tier = "frontend"
    }
    startup_script_file = "scripts/lobby.sh"
  }

  "jsj-lobby-02" = {
    hostname             = "jsj-lobby-02"
    zone                 = "asia-northeast3-b"
    subnetwork_self_link = "projects/jsj-game-l/regions/asia-northeast3/subnetworks/game-l-subnet-dmz"
    tags                 = ["lobby", "ssh-allowed"]
    labels = {
      role = "lobby"
      tier = "frontend"
    }
    startup_script_file = "scripts/lobby.sh"
  }

  "jsj-web-01" = {
    hostname             = "jsj-web-01"
    zone                 = "asia-northeast3-a"
    machine_type         = "e2-medium"
    subnetwork_self_link = "projects/jsj-game-l/regions/asia-northeast3/subnetworks/game-l-subnet-dmz"
    tags                 = ["web", "ssh-allowed"]
    labels = {
      role = "web"
      tier = "frontend"
    }
    startup_script_file = "scripts/lobby.sh"
  }

  "jsj-web-02" = {
    hostname             = "jsj-web-02"
    zone                 = "asia-northeast3-b"
    subnetwork_self_link = "projects/jsj-game-l/regions/asia-northeast3/subnetworks/game-l-subnet-dmz"
    tags                 = ["web", "ssh-allowed"]
    labels = {
      role = "web"
      tier = "frontend"
    }
    startup_script_file = "scripts/lobby.sh"
  }

  "jsj-was-01" = {
    hostname             = "jsj-was-01"
    zone                 = "asia-northeast3-a"
    machine_type         = "e2-standard-4"
    subnetwork_self_link = "projects/jsj-game-l/regions/asia-northeast3/subnetworks/game-l-subnet-private"
    tags                 = ["was", "ssh-allowed"]
    labels = {
      role = "was"
      tier = "backend"
    }
    startup_script_file = "scripts/was.sh"
  }

  "jsj-was-02" = {
    hostname             = "jsj-was-02"
    zone                 = "asia-northeast3-b"
    machine_type         = "e2-standard-4"
    subnetwork_self_link = "projects/jsj-game-l/regions/asia-northeast3/subnetworks/game-l-subnet-private"
    tags                 = ["was", "ssh-allowed"]
    labels = {
      role = "was"
      tier = "backend"
    }
    image_family        = "ubuntu-2204-lts"
    image_project       = "ubuntu-os-cloud"
    startup_script_file = "scripts/was.sh"
  }
}
