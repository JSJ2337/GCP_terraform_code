                            # gh CLIì— GitHub Token ì „ë‹¬
                            export GH_TOKEN=\${GITHUB_TOKEN}

                            gh pr create \\
                                --title "${prTitle}" \\
                                --body "${prBody}" \\
                                --base ${baseBranch} \\
